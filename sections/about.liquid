{{ 'component--about.css' | asset_url | stylesheet_tag }}

<div class="wrap">

    <div class="left">
        <h2>{{ section.settings.about_heading }}</h2>
    </div>

    <div class="right">
        {{ section.settings.about_body | newline_to_br }}
    </div>

</div>


{% schema %}
    {
      "name": "About",
      "tag": "section",
      "class": "about",
      "settings": [
        {
            "type": "text",
            "id": "about_heading",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "about_body",
            "label": "Body"
        }
      ]
    }
{% endschema %}
    